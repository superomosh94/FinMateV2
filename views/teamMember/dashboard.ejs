<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Team Leader Dashboard - FinMate</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .sidebar {
            background: linear-gradient(180deg, #2c3e50 0%, #3498db 100%);
            min-height: 100vh;
            box-shadow: 2px 0 5px rgba(0,0,0,0.1);
        }
        .sidebar .nav-link {
            color: #ecf0f1;
            padding: 12px 20px;
            margin: 2px 0;
            border-radius: 5px;
            transition: all 0.3s;
        }
        .sidebar .nav-link:hover, .sidebar .nav-link.active {
            background-color: rgba(255,255,255,0.1);
            color: #fff;
        }
        .stat-card {
            transition: transform 0.2s;
            cursor: pointer;
        }
        .stat-card:hover {
            transform: translateY(-2px);
        }
        .quick-action-btn {
            transition: all 0.3s;
        }
        .quick-action-btn:hover {
            transform: scale(1.05);
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-3 col-lg-2 d-md-block sidebar">
                <div class="position-sticky pt-3">
                    <h4 class="text-white text-center mb-4">
                        <i class="fas fa-chart-line me-2"></i>
                        FinMate Leader
                    </h4>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link active" href="/team-leader/dashboard">
                                <i class="fas fa-tachometer-alt me-2"></i>
                                Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/team-leader/teams">
                                <i class="fas fa-users me-2"></i>
                                Team Management
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/team-leader/members">
                                <i class="fas fa-user-friends me-2"></i>
                                Team Members
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/team-leader/expenses">
                                <i class="fas fa-money-bill-wave me-2"></i>
                                Expense Management
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/team-leader/planned-expenses">
                                <i class="fas fa-calendar-alt me-2"></i>
                                Planned Expenses
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/team-leader/budgets">
                                <i class="fas fa-chart-pie me-2"></i>
                                Budget Management
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/team-leader/reports">
                                <i class="fas fa-chart-bar me-2"></i>
                                Reports
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/team-leader/notifications">
                                <i class="fas fa-bell me-2"></i>
                                Notifications
                            </a>
                        </li>
                        <li class="nav-item mt-4">
                            <a class="nav-link" href="/team-leader/profile">
                                <i class="fas fa-user me-2"></i>
                                Profile
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/team-leader/settings">
                                <i class="fas fa-cog me-2"></i>
                                Settings
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-warning" href="/auth/logout" onclick="event.preventDefault(); document.getElementById('logout-form').submit();">
                                <i class="fas fa-sign-out-alt me-2"></i>
                                Logout
                            </a>
                            <form id="logout-form" action="/auth/logout" method="POST" style="display: none;"></form>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Main content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">Team Leader Dashboard</h1>
                    <div class="btn-toolbar mb-2 mb-md-0">
                        <span class="me-3 text-muted" id="userWelcome">Loading...</span>
                        <div class="btn-group">
                            <a href="/team-leader/quick-actions" class="btn btn-sm btn-outline-primary">
                                <i class="fas fa-bolt me-1"></i>Quick Actions
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Statistics Cards -->
                <div class="row mb-4">
                    <div class="col-xl-3 col-md-6 mb-4">
                        <div class="card border-left-primary shadow h-100 py-2 stat-card" onclick="loadRoute('/team-leader/members')">
                            <div class="card-body">
                                <div class="row no-gutters align-items-center">
                                    <div class="col mr-2">
                                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                            Active Members</div>
                                        <div class="h5 mb-0 font-weight-bold text-gray-800" id="activeMembers">
                                            <i class="fas fa-spinner fa-spin"></i>
                                        </div>
                                    </div>
                                    <div class="col-auto">
                                        <i class="fas fa-users fa-2x text-gray-300"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-xl-3 col-md-6 mb-4">
                        <div class="card border-left-warning shadow h-100 py-2 stat-card" onclick="loadRoute('/team-leader/expenses/pending')">
                            <div class="card-body">
                                <div class="row no-gutters align-items-center">
                                    <div class="col mr-2">
                                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                            Pending Expenses</div>
                                        <div class="h5 mb-0 font-weight-bold text-gray-800" id="pendingExpenses">
                                            <i class="fas fa-spinner fa-spin"></i>
                                        </div>
                                    </div>
                                    <div class="col-auto">
                                        <i class="fas fa-clock fa-2x text-gray-300"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-xl-3 col-md-6 mb-4">
                        <div class="card border-left-success shadow h-100 py-2 stat-card" onclick="loadRoute('/team-leader/expenses')">
                            <div class="card-body">
                                <div class="row no-gutters align-items-center">
                                    <div class="col mr-2">
                                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                            Total Expenses</div>
                                        <div class="h5 mb-0 font-weight-bold text-gray-800" id="totalExpenses">
                                            <i class="fas fa-spinner fa-spin"></i>
                                        </div>
                                    </div>
                                    <div class="col-auto">
                                        <i class="fas fa-money-bill-wave fa-2x text-gray-300"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-xl-3 col-md-6 mb-4">
                        <div class="card border-left-info shadow h-100 py-2 stat-card" onclick="loadRoute('/team-leader/budgets')">
                            <div class="card-body">
                                <div class="row no-gutters align-items-center">
                                    <div class="col mr-2">
                                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                            Total Spent</div>
                                        <div class="h5 mb-0 font-weight-bold text-gray-800" id="totalSpent">
                                            <i class="fas fa-spinner fa-spin"></i>
                                        </div>
                                    </div>
                                    <div class="col-auto">
                                        <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Quick Actions -->
                <div class="row mb-4">
                    <div class="col-12">
                        <div class="card shadow">
                            <div class="card-header py-3">
                                <h6 class="m-0 font-weight-bold text-primary">Quick Actions</h6>
                            </div>
                            <div class="card-body">
                                <div class="row text-center">
                                    <div class="col-md-2 mb-3">
                                        <a href="/team-leader/expenses/pending" class="btn btn-warning btn-lg quick-action-btn w-100">
                                            <i class="fas fa-clipboard-check fa-2x mb-2"></i><br>
                                            Review Expenses
                                        </a>
                                    </div>
                                    <div class="col-md-2 mb-3">
                                        <a href="/team-leader/members/add" class="btn btn-primary btn-lg quick-action-btn w-100">
                                            <i class="fas fa-user-plus fa-2x mb-2"></i><br>
                                            Add Member
                                        </a>
                                    </div>
                                    <div class="col-md-2 mb-3">
                                        <a href="/team-leader/budgets/create" class="btn btn-success btn-lg quick-action-btn w-100">
                                            <i class="fas fa-plus-circle fa-2x mb-2"></i><br>
                                            Create Budget
                                        </a>
                                    </div>
                                    <div class="col-md-2 mb-3">
                                        <a href="/team-leader/planned-expenses/add" class="btn btn-info btn-lg quick-action-btn w-100">
                                            <i class="fas fa-calendar-plus fa-2x mb-2"></i><br>
                                            Plan Expense
                                        </a>
                                    </div>
                                    <div class="col-md-2 mb-3">
                                        <a href="/team-leader/reports/expenses" class="btn btn-secondary btn-lg quick-action-btn w-100">
                                            <i class="fas fa-chart-bar fa-2x mb-2"></i><br>
                                            View Reports
                                        </a>
                                    </div>
                                    <div class="col-md-2 mb-3">
                                        <a href="/team-leader/notifications" class="btn btn-dark btn-lg quick-action-btn w-100">
                                            <i class="fas fa-bell fa-2x mb-2"></i><br>
                                            Notifications
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Recent Activity & Budget Overview -->
                <div class="row">
                    <div class="col-lg-6 mb-4">
                        <div class="card shadow">
                            <div class="card-header py-3 d-flex justify-content-between align-items-center">
                                <h6 class="m-0 font-weight-bold text-primary">Budget Overview</h6>
                                <a href="/team-leader/budgets" class="btn btn-sm btn-outline-primary">View All</a>
                            </div>
                            <div class="card-body">
                                <div id="budgetOverview">
                                    <div class="text-center py-4">
                                        <i class="fas fa-spinner fa-spin fa-2x text-muted"></i>
                                        <p class="mt-2 text-muted">Loading budget data...</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-6 mb-4">
                        <div class="card shadow">
                            <div class="card-header py-3 d-flex justify-content-between align-items-center">
                                <h6 class="m-0 font-weight-bold text-primary">Team Performance</h6>
                                <a href="/team-leader/reports/team-performance" class="btn btn-sm btn-outline-primary">View Details</a>
                            </div>
                            <div class="card-body">
                                <div id="teamPerformance">
                                    <div class="text-center py-4">
                                        <i class="fas fa-spinner fa-spin fa-2x text-muted"></i>
                                        <p class="mt-2 text-muted">Loading performance data...</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Load dashboard data when page loads
        document.addEventListener('DOMContentLoaded', function() {
            loadUserInfo();
            loadTeamStats();
            loadBudgetOverview();
            loadTeamPerformance();
        });

        // Load user information
        async function loadUserInfo() {
            try {
                const response = await fetch('/team-leader/dashboard');
                const data = await response.json();
                if (data.user) {
                    document.getElementById('userWelcome').textContent = 
                        `Welcome, ${data.user.first_name} ${data.user.last_name} (Team Leader)`;
                }
            } catch (error) {
                console.error('Error loading user info:', error);
                document.getElementById('userWelcome').textContent = 'Welcome, Team Leader';
            }
        }

        // Load team statistics
        async function loadTeamStats() {
            try {
                const response = await fetch('/team-leader/api/team-stats');
                const data = await response.json();
                
                document.getElementById('activeMembers').textContent = data.active_members || 0;
                document.getElementById('pendingExpenses').textContent = data.pending_expenses || 0;
                document.getElementById('totalExpenses').textContent = data.total_expenses || 0;
                document.getElementById('totalSpent').textContent = `$${(data.total_spent || 0).toLocaleString()}`;
            } catch (error) {
                console.error('Error loading team stats:', error);
                // Set default values on error
                document.getElementById('activeMembers').textContent = '0';
                document.getElementById('pendingExpenses').textContent = '0';
                document.getElementById('totalExpenses').textContent = '0';
                document.getElementById('totalSpent').textContent = '$0';
            }
        }

        // Load budget overview
        async function loadBudgetOverview() {
            try {
                const response = await fetch('/team-leader/api/budget-overview');
                const data = await response.json();
                
                const budgetOverview = document.getElementById('budgetOverview');
                budgetOverview.innerHTML = `
                    <div class="mb-3">
                        <div class="d-flex justify-content-between mb-1">
                            <span>Total Budgets:</span>
                            <strong>${data.total_budgets || 0}</strong>
                        </div>
                        <div class="d-flex justify-content-between mb-1">
                            <span>Total Amount:</span>
                            <strong>$${(data.total_amount || 0).toLocaleString()}</strong>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span>Total Spent:</span>
                            <strong>$${(data.total_spent || 0).toLocaleString()}</strong>
                        </div>
                    </div>
                    <div class="progress mb-3" style="height: 20px;">
                        <div class="progress-bar bg-success" role="progressbar" 
                             style="width: ${((data.total_spent / data.total_amount) * 100) || 0}%">
                            ${Math.round(((data.total_spent / data.total_amount) * 100) || 0)}%
                        </div>
                    </div>
                    <small class="text-muted">Budget utilization</small>
                `;
            } catch (error) {
                console.error('Error loading budget overview:', error);
                document.getElementById('budgetOverview').innerHTML = 
                    '<p class="text-muted">Unable to load budget data</p>';
            }
        }

        // Load team performance
        async function loadTeamPerformance() {
            try {
                const response = await fetch('/team-leader/api/member-performance');
                const data = await response.json();
                
                const teamPerformance = document.getElementById('teamPerformance');
                if (data && data.length > 0) {
                    let html = '<div class="table-responsive"><table class="table table-sm">';
                    html += '<thead><tr><th>Member</th><th>Expenses</th><th>Amount</th></tr></thead><tbody>';
                    
                    data.forEach(member => {
                        html += `<tr>
                            <td>${member.name}</td>
                            <td>${member.expenses}</td>
                            <td>$${member.amount}</td>
                        </tr>`;
                    });
                    
                    html += '</tbody></table></div>';
                    teamPerformance.innerHTML = html;
                } else {
                    teamPerformance.innerHTML = '<p class="text-muted">No performance data available</p>';
                }
            } catch (error) {
                console.error('Error loading team performance:', error);
                document.getElementById('teamPerformance').innerHTML = 
                    '<p class="text-muted">Unable to load performance data</p>';
            }
        }

        // Utility function to load routes
        function loadRoute(url) {
            window.location.href = url;
        }
    </script>
</body>
</html>