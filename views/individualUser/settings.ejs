<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <%- include('../partials/sidebar', { user: user, currentPage: currentPage, notificationCount: notificationCount }) %>

            <!-- Main content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <div class="d-flex align-items-center gap-2">
                        <button class="btn btn-outline-secondary d-lg-none me-2" id="sidebarToggle" aria-label="Toggle navigation">
                            <i class="fas fa-bars"></i>
                        </button>
                        <h1 class="h2 mb-0"><i class="fas fa-cog me-2"></i><%= title %></h1>
                    </div>
                </div>

                <% if (success) { %>
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="fas fa-check-circle me-2"></i><%= message %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>

                <% if (error) { %>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="fas fa-exclamation-triangle me-2"></i><%= error %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>

                <div class="row">
                    <div class="col-md-8">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-title mb-0">
                                    <i class="fas fa-money-bill-wave me-2"></i>Spending Limits
                                </h5>
                            </div>
                            <div class="card-body">
                                <form method="POST" action="/user/settings/update">
                                    <div class="mb-3">
                                        <label for="daily_expense_limit" class="form-label">
                                            <i class="fas fa-calendar-day me-2"></i>Daily Expense Limit
                                        </label>
                                        <div class="input-group">
                                            <span class="input-group-text">$</span>
                                            <input type="number" 
                                                   class="form-control" 
                                                   id="daily_expense_limit"
                                                   name="daily_expense_limit" 
                                                   value="<%= settings.daily_expense_limit || 1000 %>"
                                                   min="1" 
                                                   max="100000"
                                                   step="0.01"
                                                   required>
                                        </div>
                                        <div class="form-text">
                                            Set your maximum daily spending limit. You'll get alerts when you approach this limit.
                                        </div>
                                    </div>

                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-save me-2"></i>Save Settings
                                    </button>
                                    <a href="/user/dashboard" class="btn btn-outline-secondary">
                                        <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
                                    </a>
                                </form>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-title mb-0">
                                    <i class="fas fa-info-circle me-2"></i>About Daily Limits
                                </h5>
                            </div>
                            <div class="card-body">
                                <p class="card-text">
                                    <strong>Daily Expense Limits</strong> help you:
                                </p>
                                <ul class="list-unstyled">
                                    <li><i class="fas fa-check text-success me-2"></i>Control daily spending</li>
                                    <li><i class="fas fa-check text-success me-2"></i>Avoid overspending</li>
                                    <li><i class="fas fa-check text-success me-2"></i>Get alerts when near limit</li>
                                    <li><i class="fas fa-check text-success me-2"></i>Track budget compliance</li>
                                </ul>
                                <p class="text-muted small">
                                    Your current limit: <strong>$<%= settings.daily_expense_limit || 1000 %></strong>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>