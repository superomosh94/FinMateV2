<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Upcoming Expenses - FinMate</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .purchase-card { transition: all 0.3s; }
        .purchase-card.completed { opacity: 0.7; background-color: #f8f9fa; }
        .purchase-card.completed .card-title { text-decoration: line-through; }
        .total-cost { font-weight: bold; color: #dc3545; }
        .badge-period-week { background-color: #0dcaf0; }
        .badge-period-month { background-color: #0d6efd; }
        .badge-period-year { background-color: #198754; }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <%- include('../../partials/sidebar') %>

            <!-- Main Content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">Upcoming Expenses</h1>
                    <a href="/user/upcoming-expenses/add" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Add Upcoming Expense
                    </a>
                </div>

                <!-- Flash Messages -->
                <% if (success) { %>
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="fas fa-check-circle"></i> <%= message %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>
                <% if (error) { %>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="fas fa-exclamation-circle"></i> <%= error %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>

                <!-- Summary Cards -->
                <div class="row mb-4">
                    <div class="col-md-4">
                        <div class="card text-white bg-primary">
                            <div class="card-body">
                                <h6 class="card-title">Total Planned</h6>
                                <h3>ksh <%= totalPlanned.toFixed(2) %></h3>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card text-white bg-warning">
                            <div class="card-body">
                                <h6 class="card-title">Pending</h6>
                                <h3><%= pendingCount %></h3>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card text-white bg-success">
                            <div class="card-body">
                                <h6 class="card-title">Completed</h6>
                                <h3><%= completedCount %></h3>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Filters -->
                <div class="card mb-4">
                    <div class="card-body">
                        <form id="filterForm" method="GET" class="row g-3">
                            <div class="col-md-3">
                                <label class="form-label">Status</label>
                                <select class="form-select" name="status" onchange="this.form.submit()">
                                    <option value="">All</option>
                                    <option value="0" <%= statusFilter === '0' ? 'selected' : '' %>>Pending</option>
                                    <option value="1" <%= statusFilter === '1' ? 'selected' : '' %>>Completed</option>
                                </select>
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">Period</label>
                                <select class="form-select" name="period" onchange="this.form.submit()">
                                    <option value="">All Periods</option>
                                    <option value="week" <%= periodFilter === 'week' ? 'selected' : '' %>>Weekly</option>
                                    <option value="month" <%= periodFilter === 'month' ? 'selected' : '' %>>Monthly</option>
                                    <option value="year" <%= periodFilter === 'year' ? 'selected' : '' %>>Yearly</option>
                                </select>
                            </div>
                            <div class="col-md-6 d-flex align-items-end">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" name="showCompleted" <%= showCompleted ? 'checked' : '' %> onchange="this.form.submit()" id="showCompleted">
                                    <label class="form-check-label" for="showCompleted">Show Completed</label>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Upcoming Expenses Grid -->
                <% if (upcomingExpenses.length === 0) { %>
                    <div class="text-center py-5">
                        <i class="fas fa-shopping-cart fa-3x text-muted mb-3"></i>
                        <h3 class="text-muted">No Upcoming Expenses Found</h3>
                        <p class="text-muted">Start by adding your first upcoming expense.</p>
                        <a href="/user/upcoming-expenses/add" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Add Upcoming Expense
                        </a>
                    </div>
                <% } else { %>
                    <div class="row" id="purchasesGrid">
                        <% upcomingExpenses.forEach(purchase => { %>
                            <div class="col-md-4 mb-3">
                                <div class="card h-100 purchase-card <%= purchase.status ? 'completed' : '' %>">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                            <h5 class="card-title"><%= purchase.title %></h5>
                                            <span class="badge badge-period-<%= purchase.period %>">
                                                <%= purchase.period.charAt(0).toUpperCase() + purchase.period.slice(1) %>
                                            </span>
                                        </div>
                                        <% if (purchase.description) { %>
                                            <p class="card-text"><%= purchase.description %></p>
                                        <% } %>
                                        <% if (purchase.category) { %>
                                            <p class="card-text">
                                                <small class="text-muted">Category: <%= purchase.category %></small>
                                            </p>
                                        <% } %>
                                        <div class="row mt-3">
                                            <div class="col-6">
                                                <strong>Amount:</strong><br>
                                                Ksh <%= parseFloat(purchase.planned_amount).toFixed(2) %>
                                            </div>
                                            <div class="col-6">
                                                <strong>Quantity:</strong><br>
                                                <%= purchase.quantity %>
                                            </div>
                                        </div>
                                        <div class="mt-2 total-cost">
                                            Total: Ksh <%= (parseFloat(purchase.planned_amount) * parseInt(purchase.quantity)).toFixed(2) %>
                                        </div>
                                        <div class="mt-3">
                                            <small class="text-muted">
                                                Added: <%= new Date(purchase.created_at).toLocaleDateString() %>
                                            </small>
                                        </div>
                                    </div>
                                    <div class="card-footer">
                                        <div class="btn-group w-100">
                                            <form method="POST" action="/user/upcoming-expenses/complete/<%= purchase.id %>" style="display: inline;">
                                                <button type="submit" class="btn btn-sm <%= purchase.status ? 'btn-outline-warning' : 'btn-outline-success' %>">
                                                    <i class="fas <%= purchase.status ? 'fa-undo' : 'fa-check' %>"></i>
                                                    <%= purchase.status ? 'Mark Pending' : 'Mark Complete' %>
                                                </button>
                                            </form>
                                            <a href="/user/upcoming-expenses/edit/<%= purchase.id %>" class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <form method="POST" action="/user/upcoming-expenses/delete/<%= purchase.id %>" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this upcoming expense?');">
                                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                <% } %>
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>