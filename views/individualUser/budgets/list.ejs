<%
    layout = 'layouts/main';
    title = 'Budgets';
    currentPage = 'budgets';
%>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h3>Budget Management</h3>
    <a href="/user/budgets/add" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i>Add Budget
    </a>
</div>

<div class="row">
    <% if (budgets && budgets.length > 0) { %>
        <% budgets.forEach(budget => { %>
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card shadow">
                    <div class="card-body">
                        <h5 class="card-title"><%= budget.category %></h5>
                        <p class="card-text"><%= budget.description %></p>
                        <div class="mb-3">
                            <strong>$<%= budget.amount.toFixed(2) %></strong>
                            <small class="text-muted">for <%= budget.month %>/<%= budget.year %></small>
                        </div>
                        <div class="d-flex gap-2">
                            <a href="/user/budgets/edit/<%= budget.id %>" class="btn btn-sm btn-outline-primary flex-fill">
                                <i class="fas fa-edit me-1"></i>Edit
                            </a>
                            <form action="/user/budgets/delete/<%= budget.id %>" method="POST" class="flex-fill">
                                <button type="submit" class="btn btn-sm btn-outline-danger w-100"
                                        onclick="return confirm('Are you sure you want to delete this budget?')">
                                    <i class="fas fa-trash me-1"></i>Delete
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        <% }) %>
    <% } else { %>
        <div class="col-12">
            <div class="text-center py-5">
                <i class="fas fa-wallet fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">No budgets found</h5>
                <p class="text-muted">Start by creating your first budget</p>
                <a href="/user/budgets/add" class="btn btn-primary">Add Budget</a>
            </div>
        </div>
    <% } %>
</div>