<%
    layout = 'layouts/main';
    title = 'Savings';
    currentPage = 'savings';
%>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h3>Savings Goals</h3>
    <a href="/user/savings/add" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i>Add Savings Goal
    </a>
</div>

<div class="row">
    <% if (savings && savings.length > 0) { %>
        <% savings.forEach(saving => { %>
            <div class="col-lg-6 mb-4">
                <div class="card shadow">
                    <div class="card-body">
                        <h5 class="card-title"><%= saving.name %></h5>
                        <p class="card-text"><%= saving.description %></p>
                        
                        <div class="mb-3">
                            <div class="d-flex justify-content-between mb-1">
                                <span>Progress</span>
                                <span>$<%= saving.current_amount.toFixed(2) %> / $<%= saving.target_amount.toFixed(2) %></span>
                            </div>
                            <div class="progress">
                                <% const progress = (saving.current_amount / saving.target_amount) * 100; %>
                                <div class="progress-bar" role="progressbar" 
                                     style="width: <%= Math.min(progress, 100) %>%;"
                                     aria-valuenow="<%= progress %>" aria-valuemin="0" aria-valuemax="100">
                                    <%= Math.round(progress) %>%
                                </div>
                            </div>
                        </div>

                        <!-- Add Amount Form -->
                        <form action="/user/savings/add-amount/<%= saving.id %>" method="POST" class="mb-3">
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input type="number" step="0.01" class="form-control" name="amount" 
                                       placeholder="Add amount" required>
                                <button type="submit" class="btn btn-success">Add</button>
                            </div>
                        </form>

                        <div class="d-flex gap-2">
                            <a href="/user/savings/edit/<%= saving.id %>" class="btn btn-sm btn-outline-primary flex-fill">
                                <i class="fas fa-edit me-1"></i>Edit
                            </a>
                            <form action="/user/savings/delete/<%= saving.id %>" method="POST" class="flex-fill">
                                <button type="submit" class="btn btn-sm btn-outline-danger w-100"
                                        onclick="return confirm('Are you sure you want to delete this savings goal?')">
                                    <i class="fas fa-trash me-1"></i>Delete
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        <% }) %>
    <% } else { %>
        <div class="col-12">
            <div class="text-center py-5">
                <i class="fas fa-piggy-bank fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">No savings goals found</h5>
                <p class="text-muted">Start by creating your first savings goal</p>
                <a href="/user/savings/add" class="btn btn-primary">Add Savings Goal</a>
            </div>
        </div>
    <% } %>
</div>