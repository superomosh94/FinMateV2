<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .team-card {
            transition: transform 0.2s;
            border: 1px solid #e9ecef;
        }
        .team-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }
        .member-count {
            font-size: 0.9rem;
            color: #6c757d;
        }
        .team-leader {
            font-weight: 500;
            color: #495057;
        }
        .status-badge {
            font-size: 0.75rem;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <%- include('../../partials/admin-sidebar') -%>

            <!-- Main content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4" style="margin-left: 280px;">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">
                        <i class="fas fa-users-cog me-2"></i>
                        Team Management
                    </h1>
                    <div class="btn-toolbar mb-2 mb-md-0">
                        <a href="/admin/teams/create" class="btn btn-primary">
                            <i class="fas fa-plus-circle me-1"></i>
                            Create New Team
                        </a>
                    </div>
                </div>

                <!-- Success/Error Messages -->
                <% if (typeof success !== 'undefined' && success) { %>
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="fas fa-check-circle me-2"></i>
                        <%= success %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>
                
                <% if (typeof error !== 'undefined' && error) { %>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="fas fa-exclamation-circle me-2"></i>
                        <%= error %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>

                <!-- Teams Overview Cards -->
                <div class="row mb-4">
                    <div class="col-md-3">
                        <div class="card text-white bg-primary">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h4 class="card-title"><%= teams.length %></h4>
                                        <p class="card-text">Total Teams</p>
                                    </div>
                                    <div class="align-self-center">
                                        <i class="fas fa-users fa-2x"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-white bg-success">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h4 class="card-title" id="activeTeamsCount">0</h4>
                                        <p class="card-text">Active Teams</p>
                                    </div>
                                    <div class="align-self-center">
                                        <i class="fas fa-check-circle fa-2x"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-white bg-warning">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h4 class="card-title" id="teamLeadersCount">0</h4>
                                        <p class="card-text">Team Leaders</p>
                                    </div>
                                    <div class="align-self-center">
                                        <i class="fas fa-user-shield fa-2x"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-white bg-info">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h4 class="card-title" id="totalMembers">0</h4>
                                        <p class="card-text">Total Members</p>
                                    </div>
                                    <div class="align-self-center">
                                        <i class="fas fa-user-friends fa-2x"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Teams Table -->
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-list me-2"></i>
                            All Teams
                        </h5>
                    </div>
                    <div class="card-body">
                        <% if (teams && teams.length > 0) { %>
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Team Name</th>
                                            <th>Description</th>
                                            <th>Team Leader</th>
                                            <th>Member Count</th>
                                            <th>Created Date</th>
                                            <th>Status</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% teams.forEach(team => { %>
                                            <tr>
                                                <td>
                                                    <strong><%= team.name %></strong>
                                                </td>
                                                <td>
                                                    <%= team.description || 'No description' %>
                                                </td>
                                                <td>
                                                    <% if (team.leader_name) { %>
                                                        <span class="team-leader">
                                                            <i class="fas fa-crown me-1 text-warning"></i>
                                                            <%= team.leader_name %>
                                                        </span>
                                                    <% } else { %>
                                                        <span class="text-muted">Not assigned</span>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <span class="member-count">
                                                        <i class="fas fa-users me-1"></i>
                                                        <span class="member-count-<%= team.id %>">0</span> members
                                                    </span>
                                                </td>
                                                <td>
                                                    <%= new Date(team.created_at).toLocaleDateString() %>
                                                </td>
                                                <td>
                                                    <span class="badge bg-success status-badge">Active</span>
                                                </td>
                                                <td>
                                                    <div class="btn-group btn-group-sm">
                                                        <a href="/admin/teams/view/<%= team.id %>" class="btn btn-outline-primary" title="View Team">
                                                            <i class="fas fa-eye"></i>
                                                        </a>
                                                        <a href="/admin/teams/edit/<%= team.id %>" class="btn btn-outline-warning" title="Edit Team">
                                                            <i class="fas fa-edit"></i>
                                                        </a>
                                                        <button class="btn btn-outline-danger delete-team" data-team-id="<%= team.id %>" data-team-name="<%= team.name %>" title="Delete Team">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    </div>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        <% } else { %>
                            <div class="text-center py-4">
                                <i class="fas fa-users fa-3x text-muted mb-3"></i>
                                <h5 class="text-muted">No Teams Found</h5>
                                <p class="text-muted">Get started by creating your first team.</p>
                                <a href="/admin/teams/create" class="btn btn-primary">
                                    <i class="fas fa-plus-circle me-1"></i>
                                    Create First Team
                                </a>
                            </div>
                        <% } %>
                    </div>
                </div>

                <!-- Quick Actions -->
                <div class="row mt-4">
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body text-center">
                                <i class="fas fa-user-plus fa-2x text-primary mb-3"></i>
                                <h5>Add Team Members</h5>
                                <p class="text-muted">Add users to existing teams</p>
                                <a href="/admin/users" class="btn btn-outline-primary">Manage Users</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body text-center">
                                <i class="fas fa-chart-pie fa-2x text-success mb-3"></i>
                                <h5>Team Analytics</h5>
                                <p class="text-muted">View team performance metrics</p>
                                <a href="/admin/reports?type=teams" class="btn btn-outline-success">View Reports</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body text-center">
                                <i class="fas fa-cog fa-2x text-warning mb-3"></i>
                                <h5>Team Settings</h5>
                                <p class="text-muted">Configure team permissions</p>
                                <a href="/admin/role-management" class="btn btn-outline-warning">Manage Roles</a>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <!-- Delete Team Confirmation Modal -->
    <div class="modal fade" id="deleteTeamModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirm Delete</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete team "<strong id="deleteTeamName"></strong>"?</p>
                    <p class="text-danger"><small>This action cannot be undone. All team members will be unassigned.</small></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <form id="deleteTeamForm" method="POST" style="display: inline;">
                        <button type="submit" class="btn btn-danger">Delete Team</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Calculate and display team statistics
            function calculateTeamStats() {
                const teams = <%= JSON.stringify(teams) %>;
                let activeTeams = 0;
                let teamLeaders = 0;
                let totalMembers = 0;

                teams.forEach(team => {
                    if (team.leader_name) teamLeaders++;
                    activeTeams++; // All teams are considered active in current implementation
                    
                    // Simulate member count (you would fetch this from your database)
                    const memberCount = Math.floor(Math.random() * 10) + 1;
                    totalMembers += memberCount;
                    
                    // Update member count in table
                    const memberCountElement = document.querySelector(`.member-count-${team.id}`);
                    if (memberCountElement) {
                        memberCountElement.textContent = memberCount;
                    }
                });

                document.getElementById('activeTeamsCount').textContent = activeTeams;
                document.getElementById('teamLeadersCount').textContent = teamLeaders;
                document.getElementById('totalMembers').textContent = totalMembers;
            }

            // Delete team confirmation
            const deleteButtons = document.querySelectorAll('.delete-team');
            const deleteTeamModal = new bootstrap.Modal(document.getElementById('deleteTeamModal'));
            const deleteTeamForm = document.getElementById('deleteTeamForm');
            const deleteTeamName = document.getElementById('deleteTeamName');

            deleteButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const teamId = this.getAttribute('data-team-id');
                    const teamName = this.getAttribute('data-team-name');
                    
                    deleteTeamName.textContent = teamName;
                    deleteTeamForm.action = `/admin/teams/delete/${teamId}`;
                    deleteTeamModal.show();
                });
            });

            // Initialize team statistics
            calculateTeamStats();

            // Auto-dismiss alerts after 5 seconds
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
                setTimeout(() => {
                    if (alert.parentNode) {
                        alert.style.opacity = '0';
                        setTimeout(() => {
                            if (alert.parentNode) {
                                alert.parentNode.removeChild(alert);
                            }
                        }, 300);
                    }
                }, 5000);
            });
        });
    </script>
</body>
</html>