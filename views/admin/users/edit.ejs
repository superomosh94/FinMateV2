<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .user-avatar-lg {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            background: linear-gradient(45deg, #667eea 0%, #764ba2 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 3rem;
            color: white;
            margin: 0 auto;
            border: 5px solid #fff;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }
        .user-info-card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 5px 25px rgba(0,0,0,0.1);
            transition: transform 0.3s ease;
        }
        .user-info-card:hover {
            transform: translateY(-5px);
        }
        .info-label {
            font-weight: 600;
            color: #495057;
            font-size: 0.9rem;
        }
        .info-value {
            color: #212529;
            font-size: 1rem;
        }
        .nav-tabs .nav-link.active {
            font-weight: 600;
            border-bottom: 3px solid #0d6efd;
            background: transparent;
        }
        .nav-tabs .nav-link {
            border: none;
            color: #6c757d;
        }
        .nav-tabs .nav-link:hover {
            border: none;
            color: #0d6efd;
        }
        .form-section {
            background: #f8f9fa;
            border-radius: 10px;
            padding: 25px;
            margin-bottom: 25px;
        }
        .activity-item {
            border-left: 3px solid #0d6efd;
            padding-left: 15px;
            margin-bottom: 15px;
        }
        .status-badge {
            font-size: 0.8rem;
            padding: 4px 8px;
        }
        .stat-card {
            transition: transform 0.2s;
        }
        .stat-card:hover {
            transform: translateY(-2px);
        }
        .toast-container {
            z-index: 9999;
        }
        .tab-pane {
            padding-top: 20px;
        }
        .security-card {
            border-left: 4px solid #28a745;
            transition: all 0.3s ease;
        }
        .security-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }
        .activity-preview-card {
            border: none;
            border-radius: 10px;
            box-shadow: 0 3px 15px rgba(0,0,0,0.08);
            transition: all 0.3s ease;
        }
        .activity-preview-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 5px 20px rgba(0,0,0,0.12);
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <%- include('../../partials/admin-sidebar') -%>

            <!-- Main content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4" style="margin-left: 280px;">
                <!-- Header -->
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <div>
                        <h1 class="h2">
                            <i class="fas fa-user-edit me-2"></i>
                            Edit User
                        </h1>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/admin/dashboard">Dashboard</a></li>
                                <li class="breadcrumb-item"><a href="/admin/users">User Management</a></li>
                                <li class="breadcrumb-item active">Edit <%= userData.username %></li>
                            </ol>
                        </nav>
                    </div>
                    <div class="btn-toolbar mb-2 mb-md-0">
                        <a href="/admin/users" class="btn btn-outline-secondary me-2">
                            <i class="fas fa-arrow-left me-1"></i>
                            Back to Users
                        </a>
                        <button type="submit" form="editUserForm" class="btn btn-primary">
                            <i class="fas fa-save me-1"></i>
                            Save Changes
                        </button>
                    </div>
                </div>

                <!-- Success/Error Messages -->
                <% if (locals.success) { %>
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="fas fa-check-circle me-2"></i>
                        <%= locals.success %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>
                
                <% if (locals.error) { %>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="fas fa-exclamation-circle me-2"></i>
                        <%= locals.error %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>

                <div class="row">
                    <!-- User Profile Sidebar -->
                    <div class="col-md-4 mb-4">
                        <div class="card user-info-card">
                            <div class="card-body text-center">
                                <div class="user-avatar-lg mb-3">
                                    <i class="fas fa-user"></i>
                                </div>
                                <h4 class="card-title"><%= userData.first_name || 'No Name' %> <%= userData.last_name || '' %></h4>
                                <p class="text-muted">@<%= userData.username %></p>
                                
                                <div class="d-flex justify-content-center mb-3">
                                    <span class="badge <%= userData.is_active ? 'bg-success' : 'bg-danger' %> status-badge me-2">
                                        <i class="fas fa-circle me-1"></i>
                                        <%= userData.is_active ? 'Active' : 'Inactive' %>
                                    </span>
                                    <span class="badge bg-info status-badge">
                                        <i class="fas fa-user-tag me-1"></i>
                                        <%= userData.role_name || 'No Role' %>
                                    </span>
                                </div>

                                <div class="row text-start mt-4">
                                    <div class="col-12 mb-2">
                                        <span class="info-label">Email:</span>
                                        <div class="info-value"><%= userData.email %></div>
                                    </div>
                                    <div class="col-12 mb-2">
                                        <span class="info-label">User ID:</span>
                                        <div class="info-value">#<%= userData.id %></div>
                                    </div>
                                    <div class="col-12 mb-2">
                                        <span class="info-label">Team:</span>
                                        <div class="info-value">
                                            <% if (userData.team_id) { %>
                                                <%= userData.team_name || 'Team #' + userData.team_id %>
                                            <% } else { %>
                                                No Team
                                            <% } %>
                                        </div>
                                    </div>
                                    <div class="col-12 mb-2">
                                        <span class="info-label">Member Since:</span>
                                        <div class="info-value"><%= new Date(userData.created_at).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %></div>
                                    </div>
                                    <div class="col-12 mb-2">
                                        <span class="info-label">Last Updated:</span>
                                        <div class="info-value"><%= new Date(userData.updated_at).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %></div>
                                    </div>
                                </div>

                                <!-- Quick Actions -->
                                <div class="mt-4">
                                    <div class="d-grid gap-2">
                                        <a href="/admin/users/change-password/<%= userData.id %>" class="btn btn-info btn-sm">
                                            <i class="fas fa-key me-1"></i>
                                            Change Password
                                        </a>
                                        <a href="/admin/users/activity/<%= userData.id %>" class="btn btn-primary btn-sm">
                                            <i class="fas fa-chart-line me-1"></i>
                                            View Activity
                                        </a>
                                        <% if (userData.is_active) { %>
                                            <button class="btn btn-warning btn-sm" onclick="toggleUserStatus()">
                                                <i class="fas fa-user-slash me-1"></i>
                                                Deactivate User
                                            </button>
                                        <% } else { %>
                                            <button class="btn btn-success btn-sm" onclick="toggleUserStatus()">
                                                <i class="fas fa-user-check me-1"></i>
                                                Activate User
                                            </button>
                                        <% } %>
                                        <button class="btn btn-outline-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteUserModal">
                                            <i class="fas fa-trash me-1"></i>
                                            Delete User
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- User Statistics -->
                        <div class="card mt-4">
                            <div class="card-header">
                                <h6 class="card-title mb-0">
                                    <i class="fas fa-chart-bar me-2"></i>
                                    User Statistics
                                </h6>
                            </div>
                            <div class="card-body">
                                <div class="row text-center">
                                    <div class="col-6 mb-3">
                                        <div class="text-primary stat-card">
                                            <i class="fas fa-receipt fa-2x mb-2"></i>
                                            <h5><%= userAnalytics.expenses.total || 0 %></h5>
                                            <small class="text-muted">Expenses</small>
                                            <% if (userAnalytics.expenses.totalAmount > 0) { %>
                                                <div class="small text-muted">$<%= parseFloat(userAnalytics.expenses.totalAmount).toFixed(2) %> total</div>
                                            <% } %>
                                        </div>
                                    </div>
                                    <div class="col-6 mb-3">
                                        <div class="text-success stat-card">
                                            <i class="fas fa-wallet fa-2x mb-2"></i>
                                            <h5><%= userAnalytics.budgets.total || 0 %></h5>
                                            <small class="text-muted">Budgets</small>
                                            <% if (userAnalytics.budgets.totalAmount > 0) { %>
                                                <div class="small text-muted">$<%= parseFloat(userAnalytics.budgets.totalAmount).toFixed(2) %> total</div>
                                            <% } %>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="text-warning stat-card">
                                            <i class="fas fa-piggy-bank fa-2x mb-2"></i>
                                            <h5><%= userAnalytics.savings.total || 0 %></h5>
                                            <small class="text-muted">Savings Goals</small>
                                            <% if (userAnalytics.savings.totalSaved > 0) { %>
                                                <div class="small text-muted">$<%= parseFloat(userAnalytics.savings.totalSaved).toFixed(2) %> saved</div>
                                            <% } %>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="text-info stat-card">
                                            <i class="fas fa-bell fa-2x mb-2"></i>
                                            <h5><%= userAnalytics.notifications.total || 0 %></h5>
                                            <small class="text-muted">Notifications</small>
                                            <% if (userAnalytics.notifications.unread > 0) { %>
                                                <div class="small text-danger"><%= userAnalytics.notifications.unread %> unread</div>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Quick Summary -->
                        <div class="card mt-4">
                            <div class="card-header">
                                <h6 class="card-title mb-0">
                                    <i class="fas fa-info-circle me-2"></i>
                                    Quick Summary
                                </h6>
                            </div>
                            <div class="card-body">
                                <div class="row small">
                                    <div class="col-12 mb-2">
                                        <span class="info-label">Pending Expenses:</span>
                                        <span class="info-value float-end"><%= userAnalytics.expenses.pending || 0 %></span>
                                    </div>
                                    <div class="col-12 mb-2">
                                        <span class="info-label">Total Budgets:</span>
                                        <span class="info-value float-end">$<%= parseFloat(userAnalytics.budgets.totalAmount || 0).toFixed(2) %></span>
                                    </div>
                                    <div class="col-12 mb-2">
                                        <span class="info-label">Savings Progress:</span>
                                        <span class="info-value float-end">
                                            <% if (userAnalytics.savings.totalTarget > 0) { %>
                                                <%= ((userAnalytics.savings.totalSaved / userAnalytics.savings.totalTarget) * 100).toFixed(1) %>%
                                            <% } else { %>
                                                0%
                                            <% } %>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Main Edit Form -->
                    <div class="col-md-8">
                        <!-- Tabs Navigation -->
                        <ul class="nav nav-tabs mb-4" id="userEditTabs" role="tablist">
                            <li class="nav-item" role="presentation">
                                <button class="nav-link active" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile" type="button" role="tab" aria-controls="profile" aria-selected="true">
                                    <i class="fas fa-user me-1"></i>
                                    Profile Information
                                </button>
                            </li>
                            <li class="nav-item" role="presentation">
                                <button class="nav-link" id="security-tab" data-bs-toggle="tab" data-bs-target="#security" type="button" role="tab" aria-controls="security" aria-selected="false">
                                    <i class="fas fa-shield-alt me-1"></i>
                                    Security
                                </button>
                            </li>
                            <li class="nav-item" role="presentation">
                                <button class="nav-link" id="activity-tab" data-bs-toggle="tab" data-bs-target="#activity" type="button" role="tab" aria-controls="activity" aria-selected="false">
                                    <i class="fas fa-history me-1"></i>
                                    Recent Activity
                                </button>
                            </li>
                        </ul>

                        <div class="tab-content" id="userEditTabsContent">
                            <!-- Profile Information Tab -->
                            <div class="tab-pane fade show active" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                                <form id="editUserForm" action="/admin/users/edit/<%= userData.id %>" method="POST">
                                    <div class="form-section">
                                        <h5 class="mb-4">
                                            <i class="fas fa-id-card me-2"></i>
                                            Basic Information
                                        </h5>
                                        
                                        <div class="row">
                                            <div class="col-md-6 mb-3">
                                                <label for="username" class="form-label">Username *</label>
                                                <input type="text" class="form-control" id="username" name="username" 
                                                       value="<%= userData.username %>" required>
                                                <div class="form-text">Unique identifier for the user</div>
                                            </div>
                                            <div class="col-md-6 mb-3">
                                                <label for="email" class="form-label">Email Address *</label>
                                                <input type="email" class="form-control" id="email" name="email" 
                                                       value="<%= userData.email %>" required>
                                                <div class="form-text">User's primary email address</div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-md-6 mb-3">
                                                <label for="first_name" class="form-label">First Name</label>
                                                <input type="text" class="form-control" id="first_name" name="first_name" 
                                                       value="<%= userData.first_name || '' %>">
                                            </div>
                                            <div class="col-md-6 mb-3">
                                                <label for="last_name" class="form-label">Last Name</label>
                                                <input type="text" class="form-control" id="last_name" name="last_name" 
                                                       value="<%= userData.last_name || '' %>">
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-section">
                                        <h5 class="mb-4">
                                            <i class="fas fa-users me-2"></i>
                                            Role & Team Assignment
                                        </h5>
                                        
                                        <div class="row">
                                            <div class="col-md-6 mb-3">
                                                <label for="role_id" class="form-label">User Role *</label>
                                                <select class="form-select" id="role_id" name="role_id" required>
                                                    <option value="">Select a role...</option>
                                                    <% roles.forEach(role => { %>
                                                        <option value="<%= role.id %>" 
                                                                <%= userData.role_id == role.id ? 'selected' : '' %>>
                                                            <%= role.name %>
                                                        </option>
                                                    <% }); %>
                                                </select>
                                                <div class="form-text">Determines user permissions and access levels</div>
                                            </div>
                                            <div class="col-md-6 mb-3">
                                                <label for="team_id" class="form-label">Team Assignment</label>
                                                <select class="form-select" id="team_id" name="team_id">
                                                    <option value="">No Team</option>
                                                    <% teams.forEach(team => { %>
                                                        <option value="<%= team.id %>" 
                                                                <%= userData.team_id == team.id ? 'selected' : '' %>>
                                                            <%= team.name %>
                                                        </option>
                                                    <% }); %>
                                                </select>
                                                <div class="form-text">Assign user to a specific team (optional)</div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-section">
                                        <h5 class="mb-4">
                                            <i class="fas fa-toggle-on me-2"></i>
                                            Account Status
                                        </h5>
                                        
                                        <div class="mb-3">
                                            <div class="form-check form-switch">
                                                <input class="form-check-input" type="checkbox" id="is_active" name="is_active" 
                                                       <%= userData.is_active ? 'checked' : '' %> value="1">
                                                <label class="form-check-label" for="is_active">
                                                    <strong>Active Account</strong>
                                                </label>
                                            </div>
                                            <div class="form-text">
                                                <% if (userData.is_active) { %>
                                                    <span class="text-success">User can log in and access the system</span>
                                                <% } else { %>
                                                    <span class="text-danger">User account is deactivated and cannot log in</span>
                                                <% } %>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Form Actions -->
                                    <div class="d-flex justify-content-between align-items-center mt-4">
                                        <a href="/admin/users" class="btn btn-outline-secondary">
                                            <i class="fas fa-times me-1"></i>
                                            Cancel
                                        </a>
                                        <div>
                                            <button type="submit" class="btn btn-primary">
                                                <i class="fas fa-save me-1"></i>
                                                Save Changes
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            </div>

                            <!-- Security Tab -->
                            <div class="tab-pane fade" id="security" role="tabpanel" aria-labelledby="security-tab">
                                <div class="form-section">
                                    <h5 class="mb-4">
                                        <i class="fas fa-shield-alt me-2"></i>
                                        Security Management
                                    </h5>
                                    
                                    <div class="row">
                                        <div class="col-md-6 mb-4">
                                            <div class="card security-card h-100">
                                                <div class="card-body text-center">
                                                    <div class="text-primary mb-3">
                                                        <i class="fas fa-key fa-3x"></i>
                                                    </div>
                                                    <h5 class="card-title">Password Management</h5>
                                                    <p class="card-text text-muted">
                                                        Reset user password, generate temporary passwords, and manage password policies.
                                                    </p>
                                                    <a href="/admin/users/change-password/<%= userData.id %>" class="btn btn-primary">
                                                        <i class="fas fa-key me-1"></i>
                                                        Manage Password
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6 mb-4">
                                            <div class="card security-card h-100">
                                                <div class="card-body text-center">
                                                    <div class="text-warning mb-3">
                                                        <i class="fas fa-user-shield fa-3x"></i>
                                                    </div>
                                                    <h5 class="card-title">Access Control</h5>
                                                    <p class="card-text text-muted">
                                                        Manage user permissions, role-based access, and security settings.
                                                    </p>
                                                    <button class="btn btn-outline-warning" onclick="showAccessControl()">
                                                        <i class="fas fa-cog me-1"></i>
                                                        Configure Access
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Security Status -->
                                    <div class="card">
                                        <div class="card-header">
                                            <h6 class="card-title mb-0">
                                                <i class="fas fa-info-circle me-2"></i>
                                                Security Status
                                            </h6>
                                        </div>
                                        <div class="card-body">
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                                        <span>Account Status:</span>
                                                        <span class="badge <%= userData.is_active ? 'bg-success' : 'bg-danger' %>">
                                                            <%= userData.is_active ? 'Active' : 'Inactive' %>
                                                        </span>
                                                    </div>
                                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                                        <span>Last Password Change:</span>
                                                        <span class="text-muted"><%= new Date(userData.updated_at).toLocaleDateString() %></span>
                                                    </div>
                                                    <div class="d-flex justify-content-between align-items-center">
                                                        <span>User Role:</span>
                                                        <span class="badge bg-info"><%= userData.role_name || 'No Role' %></span>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                                        <span>Email Verified:</span>
                                                        <span class="badge bg-success">Yes</span>
                                                    </div>
                                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                                        <span>Two-Factor Auth:</span>
                                                        <span class="badge bg-secondary">Not Enabled</span>
                                                    </div>
                                                    <div class="d-flex justify-content-between align-items-center">
                                                        <span>Last Login:</span>
                                                        <span class="text-muted">Recently</span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Recent Activity Tab -->
                            <div class="tab-pane fade" id="activity" role="tabpanel" aria-labelledby="activity-tab">
                                <div class="form-section">
                                    <h5 class="mb-4">
                                        <i class="fas fa-history me-2"></i>
                                        User Activity & Analytics
                                    </h5>
                                    
                                    <div class="alert alert-info">
                                        <i class="fas fa-info-circle me-2"></i>
                                        For detailed activity tracking and comprehensive analytics, visit the dedicated activity page.
                                    </div>

                                    <div class="text-center py-4">
                                        <a href="/admin/users/activity/<%= userData.id %>" class="btn btn-primary btn-lg">
                                            <i class="fas fa-chart-line me-2"></i>
                                            View Full Activity Report
                                        </a>
                                    </div>

                                    <!-- Quick Activity Preview -->
                                    <div class="card activity-preview-card">
                                        <div class="card-header bg-light">
                                            <h6 class="card-title mb-0">
                                                <i class="fas fa-clock me-2"></i>
                                                Recent Activity Preview
                                            </h6>
                                        </div>
                                        <div class="card-body">
                                            <p class="text-muted small mb-3">
                                                Last 5 activities from this user:
                                            </p>
                                            <div id="quickActivityPreview">
                                                <div class="text-center py-3">
                                                    <i class="fas fa-spinner fa-spin text-muted me-2"></i>
                                                    <span class="text-muted">Loading recent activity...</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-section">
                                    <h5 class="mb-4">
                                        <i class="fas fa-chart-line me-2"></i>
                                        Financial Overview
                                    </h5>
                                    
                                    <div class="table-responsive">
                                        <table class="table table-sm">
                                            <thead>
                                                <tr>
                                                    <th>Type</th>
                                                    <th>Description</th>
                                                    <th>Amount</th>
                                                    <th>Date</th>
                                                    <th>Status</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% if (userAnalytics.recentExpenses && userAnalytics.recentExpenses.length > 0) { %>
                                                    <% userAnalytics.recentExpenses.slice(0, 5).forEach(expense => { %>
                                                    <tr>
                                                        <td>Expense</td>
                                                        <td><%= expense.description %></td>
                                                        <td>$<%= parseFloat(expense.amount).toFixed(2) %></td>
                                                        <td><%= new Date(expense.date).toLocaleDateString() %></td>
                                                        <td>
                                                            <span class="badge bg-<%= expense.status === 'approved' ? 'success' : expense.status === 'pending' ? 'warning' : 'secondary' %>">
                                                                <%= expense.status %>
                                                            </span>
                                                        </td>
                                                    </tr>
                                                    <% }); %>
                                                <% } %>
                                                <% if (userAnalytics.recentBudgets && userAnalytics.recentBudgets.length > 0) { %>
                                                    <% userAnalytics.recentBudgets.slice(0, 3).forEach(budget => { %>
                                                    <tr>
                                                        <td>Budget</td>
                                                        <td><%= budget.category %></td>
                                                        <td>$<%= parseFloat(budget.amount).toFixed(2) %></td>
                                                        <td><%= new Date().toLocaleDateString() %></td>
                                                        <td><span class="badge bg-info">Active</span></td>
                                                    </tr>
                                                    <% }); %>
                                                <% } %>
                                                <% if ((!userAnalytics.recentExpenses || userAnalytics.recentExpenses.length === 0) && (!userAnalytics.recentBudgets || userAnalytics.recentBudgets.length === 0)) { %>
                                                <tr>
                                                    <td colspan="5" class="text-center text-muted py-3">
                                                        No recent financial activity found
                                                    </td>
                                                </tr>
                                                <% } %>
                                            </tbody>
                                        </table>
                                    </div>
                                    
                                    <div class="text-center mt-3">
                                        <a href="/admin/users/activity/<%= userData.id %>" class="btn btn-outline-primary btn-sm">
                                            <i class="fas fa-external-link-alt me-1"></i>
                                            View Complete Financial History
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <!-- Delete User Confirmation Modal -->
    <div class="modal fade" id="deleteUserModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirm User Deletion</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>Warning:</strong> This action cannot be undone!
                    </div>
                    <p>Are you sure you want to delete user "<strong><%= userData.username %></strong>"?</p>
                    <p class="text-muted">This will deactivate the user account and prevent future logins.</p>
                    
                    <div class="form-check mt-3">
                        <input class="form-check-input" type="checkbox" id="confirmDelete">
                        <label class="form-check-label" for="confirmDelete">
                            I understand this action will deactivate the user account
                        </label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <form action="/admin/users/delete/<%= userData.id %>" method="POST" style="display: inline;">
                        <button type="submit" class="btn btn-danger" id="deleteButton" disabled>
                            <i class="fas fa-trash me-1"></i>
                            Delete User
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Load quick activity preview
            loadQuickActivityPreview('<%= userData.id %>');

            // Delete confirmation toggle
            const confirmDelete = document.getElementById('confirmDelete');
            const deleteButton = document.getElementById('deleteButton');
            
            if (confirmDelete && deleteButton) {
                confirmDelete.addEventListener('change', function() {
                    deleteButton.disabled = !this.checked;
                });
            }

            // Form validation
            const editUserForm = document.getElementById('editUserForm');
            if (editUserForm) {
                editUserForm.addEventListener('submit', function(e) {
                    const username = document.getElementById('username').value;
                    const email = document.getElementById('email').value;
                    const roleId = document.getElementById('role_id').value;
                    
                    if (!username || !email || !roleId) {
                        e.preventDefault();
                        showToast('Please fill in all required fields (Username, Email, and Role).', 'error');
                    }
                });
            }

            // Initialize tabs
            const triggerTabList = [].slice.call(document.querySelectorAll('#userEditTabs button'));
            triggerTabList.forEach(function (triggerEl) {
                var tabTrigger = new bootstrap.Tab(triggerEl);
                triggerEl.addEventListener('click', function (event) {
                    event.preventDefault();
                    tabTrigger.show();
                });
            });
        });

        function showAccessControl() {
            showToast('Access control configuration would open here. Implementation required.', 'info');
        }

        function formatTimeAgo(date) {
            if (!date) return 'Unknown time';
            
            const now = new Date();
            const diffMs = now - date;
            const diffMins = Math.floor(diffMs / 60000);
            const diffHours = Math.floor(diffMs / 3600000);
            const diffDays = Math.floor(diffMs / 86400000);

            if (diffMins < 1) return 'Just now';
            if (diffMins < 60) return `${diffMins} minute${diffMins > 1 ? 's' : ''} ago`;
            if (diffHours < 24) return `${diffHours} hour${diffHours > 1 ? 's' : ''} ago`;
            if (diffDays === 1) return 'Yesterday';
            if (diffDays < 7) return `${diffDays} day${diffDays > 1 ? 's' : ''} ago`;
            if (diffDays < 30) return `${Math.floor(diffDays / 7)} week${Math.floor(diffDays / 7) > 1 ? 's' : ''} ago`;
            return date.toLocaleDateString();
        }

        async function loadQuickActivityPreview(userId) {
            try {
                const response = await fetch(`/admin/api/users/${userId}/activity?limit=5`);
                const data = await response.json();
                
                let activityHtml = '';
                
                if (data.success && data.activities && data.activities.length > 0) {
                    activityHtml = data.activities.map(activity => {
                        const activityDate = new Date(activity.activity_date || activity.created_at);
                        const amount = activity.amount ? `$${parseFloat(activity.amount).toFixed(2)}` : '';
                        const statusBadge = activity.status ? 
                            `<span class="badge bg-${getStatusColor(activity.status)}">${activity.status}</span>` : '';
                        
                        return `
                            <div class="activity-item mb-3">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div class="flex-grow-1">
                                        <strong class="d-block">${activity.description}</strong>
                                        ${amount ? `<div class="text-success fw-bold small">${amount}</div>` : ''}
                                        <div class="text-muted small">
                                            <i class="fas fa-clock me-1"></i>
                                            ${formatTimeAgo(activityDate)}
                                        </div>
                                    </div>
                                    ${statusBadge}
                                </div>
                            </div>
                        `;
                    }).join('');
                } else {
                    // Fallback to template data
                    const recentExpenses = <%= JSON.stringify(userAnalytics.recentExpenses || []) %>;
                    const recentBudgets = <%= JSON.stringify(userAnalytics.recentBudgets || []) %>;
                    
                    const allActivities = [
                        ...recentExpenses.map(expense => ({
                            description: `Expense: ${expense.description}`,
                            amount: expense.amount,
                            activity_date: expense.date,
                            status: expense.status,
                            type: 'expense'
                        })),
                        ...recentBudgets.map(budget => ({
                            description: `Budget: ${budget.category}`,
                            amount: budget.amount,
                            activity_date: new Date(),
                            status: 'active',
                            type: 'budget'
                        }))
                    ].sort((a, b) => new Date(b.activity_date) - new Date(a.activity_date)).slice(0, 5);

                    activityHtml = allActivities.map(activity => `
                        <div class="activity-item mb-3">
                            <div class="d-flex justify-content-between align-items-start">
                                <div class="flex-grow-1">
                                    <strong class="d-block">${activity.description}</strong>
                                    <div class="text-success fw-bold small">$${parseFloat(activity.amount).toFixed(2)}</div>
                                    <div class="text-muted small">
                                        <i class="fas fa-clock me-1"></i>
                                        ${new Date(activity.activity_date).toLocaleDateString()}
                                    </div>
                                </div>
                                <span class="badge bg-${getStatusColor(activity.status)}">
                                    ${activity.status}
                                </span>
                            </div>
                        </div>
                    `).join('');
                }
                
                document.getElementById('quickActivityPreview').innerHTML = activityHtml || `
                    <div class="text-center py-3">
                        <i class="fas fa-inbox text-muted me-2"></i>
                        <span class="text-muted">No recent activity found</span>
                    </div>
                `;
                
            } catch (error) {
                console.error('Error loading quick activity preview:', error);
                document.getElementById('quickActivityPreview').innerHTML = `
                    <div class="text-center py-3">
                        <i class="fas fa-exclamation-triangle text-warning me-2"></i>
                        <span class="text-muted">Unable to load activity data</span>
                    </div>
                `;
            }
        }

        function getStatusColor(status) {
            const statusMap = {
                'approved': 'success',
                'pending': 'warning',
                'rejected': 'danger',
                'active': 'info',
                'completed': 'success',
                'cancelled': 'secondary'
            };
            return statusMap[status?.toLowerCase()] || 'secondary';
        }

        function toggleUserStatus() {
            const isActive = <%= userData.is_active %>;
            const newStatus = !isActive;
            const confirmMessage = newStatus ? 
                'Are you sure you want to activate this user?' : 
                'Are you sure you want to deactivate this user?';

            if (confirm(confirmMessage)) {
                document.getElementById('is_active').checked = newStatus;
                document.getElementById('editUserForm').submit();
            }
        }

        function showToast(message, type = 'info') {
            const toast = document.createElement('div');
            toast.className = `toast align-items-center text-white bg-${type === 'error' ? 'danger' : type} border-0`;
            toast.setAttribute('role', 'alert');
            toast.innerHTML = `
                <div class="d-flex">
                    <div class="toast-body">
                        <i class="fas fa-${type === 'success' ? 'check' : type === 'error' ? 'exclamation-triangle' : 'info'}-circle me-2"></i>
                        ${message}
                    </div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
                </div>
            `;
            
            let toastContainer = document.querySelector('.toast-container');
            if (!toastContainer) {
                toastContainer = document.createElement('div');
                toastContainer.className = 'toast-container position-fixed top-0 end-0 p-3';
                document.body.appendChild(toastContainer);
            }
            
            toastContainer.appendChild(toast);
            const bsToast = new bootstrap.Toast(toast);
            bsToast.show();
            
            toast.addEventListener('hidden.bs.toast', () => {
                toast.remove();
            });
        }

        // Auto-dismiss alerts after 5 seconds
        const alerts = document.querySelectorAll('.alert');
        alerts.forEach(alert => {
            setTimeout(() => {
                if (alert.parentNode) {
                    const bsAlert = new bootstrap.Alert(alert);
                    bsAlert.close();
                }
            }, 5000);
        });
    </script>
