<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="/css/admin.css" rel="stylesheet">
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <%- include('../partials/admin-sidebar') %>

            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">Manage Budgets</h1>
                    <a href="/admin/budgets/add" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>Add Budget
                    </a>
                </div>

                <div class="card shadow">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>User/Team</th>
                                        <th>Category</th>
                                        <th>Amount</th>
                                        <th>Period</th>
                                        <th>Start Date</th>
                                        <th>End Date</th>
                                        <th>Created</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% budgets.forEach(budget => { %>
                                        <tr>
                                            <td>
                                                <% if (budget.team_name) { %>
                                                    <span class="badge bg-info">Team: <%= budget.team_name %></span>
                                                <% } else { %>
                                                    <%= budget.first_name %> <%= budget.last_name %>
                                                <% } %>
                                            </td>
                                            <td><%= budget.category %></td>
                                            <td>$<%= budget.amount %></td>
                                            <td>
                                                <span class="badge bg-secondary"><%= budget.period %></span>
                                            </td>
                                            <td><%= new Date(budget.start_date).toLocaleDateString() %></td>
                                            <td><%= budget.end_date ? new Date(budget.end_date).toLocaleDateString() : 'No end date' %></td>
                                            <td><%= new Date(budget.created_at).toLocaleDateString() %></td>
                                            <td>
                                                <a href="/admin/budgets/edit/<%= budget.id %>" class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <button onclick="deleteBudget(<%= budget.id %>)" class="btn btn-sm btn-outline-danger">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <script>
        function deleteBudget(budgetId) {
            if (confirm('Are you sure you want to delete this budget?')) {
                fetch(`/admin/budgets/delete/${budgetId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        location.reload();
                    } else {
                        alert('Error deleting budget');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Error deleting budget');
                });
            }
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/admin.js"></script>
</body>
</html>