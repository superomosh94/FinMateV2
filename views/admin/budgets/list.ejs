<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        .sidebar {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
        }
        .sidebar .nav-link {
            color: #fff;
            padding: 12px 20px;
            margin: 4px 0;
            border-radius: 8px;
            transition: all 0.3s ease;
        }
        .sidebar .nav-link:hover, .sidebar .nav-link.active {
            background: rgba(255,255,255,0.2);
        }
        .period-daily { background-color: #17a2b8; }
        .period-weekly { background-color: #28a745; }
        .period-monthly { background-color: #007bff; }
        .period-yearly { background-color: #6f42c1; }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-3 col-lg-2 d-md-block sidebar">
                <div class="position-sticky pt-3">
                    <h4 class="text-white text-center mb-4">
                        <i class="fas fa-crown me-2"></i>
                        FinMate Admin
                    </h4>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/dashboard">
                                <i class="fas fa-tachometer-alt me-2"></i>
                                Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/users">
                                <i class="fas fa-users me-2"></i>
                                User Management
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="/admin/budgets">
                                <i class="fas fa-wallet me-2"></i>
                                Budget Management
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/expenses">
                                <i class="fas fa-money-bill-wave me-2"></i>
                                Expense Management
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/notifications">
                                <i class="fas fa-bell me-2"></i>
                                Notifications
                            </a>
                        </li>
                        <li class="nav-item mt-4">
                            <a class="nav-link" href="/auth/profile">
                                <i class="fas fa-user me-2"></i>
                                Profile
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/auth/logout">
                                <i class="fas fa-sign-out-alt me-2"></i>
                                Logout
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Main content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">
                        <i class="fas fa-wallet me-2 text-primary"></i>
                        Budget Management
                    </h1>
                    <div class="btn-toolbar mb-2 mb-md-0">
                        <a href="/admin/budgets/create" class="btn btn-primary">
                            <i class="fas fa-plus me-1"></i>Create Budget
                        </a>
                    </div>
                </div>

                <!-- Success/Error Messages -->
                <% if (locals.query && locals.query.success) { %>
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="fas fa-check-circle me-2"></i>
                        <%= locals.query.success %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>

                <% if (locals.query && locals.query.error) { %>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="fas fa-exclamation-circle me-2"></i>
                        <%= locals.query.error %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>

                <!-- Budgets Table -->
                <div class="card shadow">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-list me-2"></i>All Budgets
                            <% if (locals.budgets && locals.budgets.length > 0) { %>
                                <span class="badge bg-primary ms-2"><%= locals.budgets.length %> budgets</span>
                            <% } %>
                        </h5>
                        <div class="text-muted small">
                            Showing all active budgets
                        </div>
                    </div>
                    <div class="card-body">
                        <% if (locals.budgets && locals.budgets.length > 0) { %>
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead class="table-light">
                                        <tr>
                                            <th>ID</th>
                                            <th>Category</th>
                                            <th>Amount</th>
                                            <th>Period</th>
                                            <th>Description</th>
                                            <th>Created By</th>
                                            <th>Created Date</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% locals.budgets.forEach(budget => { %>
                                            <tr>
                                                <td><strong>#<%= budget.id %></strong></td>
                                                <td>
                                                    <div class="d-flex align-items-center">
                                                        <i class="fas fa-folder text-primary me-2"></i>
                                                        <span class="fw-bold"><%= budget.category %></span>
                                                    </div>
                                                </td>
                                                <td>
                                                    <span class="fw-bold text-success">
                                                        $<%= parseFloat(budget.amount).toFixed(2) %>
                                                    </span>
                                                </td>
                                                <td>
                                                    <span class="badge period-<%= budget.period ? budget.period.toLowerCase() : 'monthly' %>">
                                                        <i class="fas fa-<%= 
                                                            budget.period === 'Daily' ? 'calendar-day' : 
                                                            budget.period === 'Weekly' ? 'calendar-week' :
                                                            budget.period === 'Yearly' ? 'calendar-year' : 
                                                            'calendar-alt' 
                                                        %> me-1"></i>
                                                        <%= budget.period %>
                                                    </span>
                                                </td>
                                                <td>
                                                    <small class="text-muted">
                                                        <%= budget.description || 'No description' %>
                                                    </small>
                                                </td>
                                                <td>
                                                    <div class="d-flex align-items-center">
                                                        <i class="fas fa-user text-muted me-2"></i>
                                                        <span><%= budget.created_by_name || 'System' %></span>
                                                    </div>
                                                </td>
                                                <td>
                                                    <small class="text-muted">
                                                        <%= new Date(budget.created_at).toLocaleDateString() %>
                                                    </small>
                                                </td>
                                                <td>
                                                    <div class="btn-group btn-group-sm">
                                                        <a href="/admin/budgets/edit/<%= budget.id %>" class="btn btn-outline-primary" title="Edit Budget">
                                                            <i class="fas fa-edit"></i>
                                                        </a>
                                                        <form action="/admin/budgets/delete/<%= budget.id %>" method="POST" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this budget?');">
                                                            <button type="submit" class="btn btn-outline-danger" title="Delete Budget">
                                                                <i class="fas fa-trash"></i>
                                                            </button>
                                                        </form>
                                                    </div>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        <% } else { %>
                            <div class="text-center py-5">
                                <i class="fas fa-wallet fa-3x text-muted mb-3"></i>
                                <h5 class="text-muted">No Budgets Found</h5>
                                <p class="text-muted">There are no budgets in the system yet.</p>
                                <a href="/admin/budgets/create" class="btn btn-primary">
                                    <i class="fas fa-plus me-1"></i>Create First Budget
                                </a>
                            </div>
                        <% } %>
                    </div>
                </div>

                <!-- Helpful links -->
                <div class="mt-3 text-center">
                    <small class="text-muted">
                        <a href="/admin/fix-budgets-table" target="_blank" class="text-decoration-none">Fix Budgets Table</a> | 
                        <a href="/admin/check-budgets-columns" target="_blank" class="text-decoration-none">Check Table Structure</a>
                    </small>
                </div>
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Auto-dismiss alerts after 5 seconds
        document.addEventListener('DOMContentLoaded', function() {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
                setTimeout(() => {
                    const bsAlert = new bootstrap.Alert(alert);
                    bsAlert.close();
                }, 5000);
            });
        });
    </script>
</body>
</html>