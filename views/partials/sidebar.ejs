<script>
    // Enhanced Navigation Manager
    class NavigationManager {
        constructor() {
            // Mobile elements
            this.mobileSidebar = document.getElementById('mobileSidebar');
            this.mobileOverlay = document.getElementById('mobileSidebarOverlay');
            this.mobileToggleBtn = document.getElementById('mobileSidebarToggle');
            this.mobileToggleFAB = document.getElementById('mobileSidebarToggleFAB');
            this.mobileCloseBtn = document.getElementById('mobileSidebarClose');

            // Desktop elements
            this.desktopSidebar = document.querySelector('.desktop-sidebar');
            this.desktopToggleBtn = document.getElementById('desktopSidebarToggle');
            this.mainContent = document.querySelector('.main-content');

            this.isMobileOpen = false;
            this.isDesktopCollapsed = localStorage.getItem('sidebarCollapsed') === 'true';

            this.init();
        }

        init() {
            // Desktop toggle logic
            if (this.desktopToggleBtn && this.desktopSidebar && this.mainContent) {
                // Apply initial state
                if (this.isDesktopCollapsed) {
                    this.desktopSidebar.classList.add('collapsed');
                    this.mainContent.classList.add('sidebar-collapsed');
                }

                this.desktopToggleBtn.addEventListener('click', () => {
                    this.isDesktopCollapsed = !this.isDesktopCollapsed;
                    this.desktopSidebar.classList.toggle('collapsed');
                    this.mainContent.classList.toggle('sidebar-collapsed');
                    localStorage.setItem('sidebarCollapsed', this.isDesktopCollapsed);
                });
            }

            // Mobile toggle logic
            if (this.mobileSidebar && this.mobileOverlay && this.mobileToggleBtn && this.mobileCloseBtn) {
                this.mobileToggleBtn.addEventListener('click', (e) => {
                    e.preventDefault();
                    this.openMobile();
                });

                if (this.mobileToggleFAB) {
                    this.mobileToggleFAB.addEventListener('click', (e) => {
                        e.preventDefault();
                        this.openMobile();
                    });
                }

                this.mobileCloseBtn.addEventListener('click', (e) => {
                    e.preventDefault();
                    this.closeMobile();
                });
                this.mobileOverlay.addEventListener('click', () => this.closeMobile());

                // Navigation links
                document.querySelectorAll('.mobile-sidebar .nav-link').forEach(link => {
                    link.addEventListener('click', () => this.closeMobile());
                });
            }

            // Keyboard and resize events
            document.addEventListener('keydown', (e) => {
                if (e.key === 'Escape') {
                    this.closeMobile();
                }
            });

            window.addEventListener('resize', () => {
                if (window.innerWidth >= 992 && this.isMobileOpen) {
                    this.closeMobile();
                }
            });
        }

        openMobile() {
            this.mobileSidebar.classList.add('mobile-open');
            this.mobileOverlay.classList.add('show');
            document.body.classList.add('sidebar-open');
            this.isMobileOpen = true;
        }

        closeMobile() {
            if (this.mobileSidebar) this.mobileSidebar.classList.remove('mobile-open');
