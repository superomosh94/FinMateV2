<script>
// Enhanced Mobile Sidebar Manager with Error Handling
class MobileSidebarManager {
    constructor() {
        this.sidebar = document.getElementById('mobileSidebar');
        this.overlay = document.getElementById('mobileSidebarOverlay');
        this.toggleBtn = document.getElementById('mobileSidebarToggle');
        this.closeBtn = document.getElementById('mobileSidebarClose');
        
        this.isOpen = false;
        this.init();
    }
    
    init() {
        // Check if all required elements exist
        if (!this.sidebar || !this.overlay || !this.toggleBtn || !this.closeBtn) {
            console.error('Mobile sidebar: Required elements not found');
            return;
        }
        
        console.log('Mobile sidebar: Initializing...');
        
        // Event Listeners
        this.toggleBtn.addEventListener('click', (e) => this.handleToggle(e));
        this.closeBtn.addEventListener('click', (e) => this.handleClose(e));
        this.overlay.addEventListener('click', (e) => this.handleOverlayClick(e));
        
        // Navigation links
        document.querySelectorAll('.mobile-sidebar .nav-link').forEach(link => {
            link.addEventListener('click', () => this.handleNavLinkClick());
        });
        
        // Keyboard and resize events
        document.addEventListener('keydown', (e) => this.handleKeydown(e));
        window.addEventListener('resize', () => this.handleResize());
        
        console.log('Mobile sidebar: Initialized successfully');
    }
    
    handleToggle(e) {
        e.preventDefault();
        e.stopPropagation();
        this.toggle();
    }
    
    handleClose(e) {
        e.preventDefault();
        e.stopPropagation();
        this.close();
    }
    
    handleOverlayClick(e) {
        if (e.target === this.overlay) {
            this.close();
        }
    }
    
    handleNavLinkClick() {
        if (window.innerWidth < 992) {
            this.close();
        }
    }
    
    handleKeydown(e) {
        if (e.key === 'Escape' && this.isOpen) {
            this.close();
        }
    }
    
    handleResize() {
        if (window.innerWidth >= 992 && this.isOpen) {
            this.close();
        }
    }
    
    open() {
        this.sidebar.classList.add('mobile-open');
        this.overlay.classList.add('show');
        document.body.classList.add('sidebar-open');
        document.body.style.overflow = 'hidden';
        this.isOpen = true;
        
        console.log('Mobile sidebar: Opened');
    }
    
    close() {
        this.sidebar.classList.remove('mobile-open');
        this.overlay.classList.remove('show');
        document.body.classList.remove('sidebar-open');
        document.body.style.overflow = '';
        this.isOpen = false;
        
        console.log('Mobile sidebar: Closed');
    }
    
    toggle() {
        if (this.isOpen) {
            this.close();
        } else {
            this.open();
        }
    }
}

// Initialize when DOM is ready
document.addEventListener('DOMContentLoaded', function() {
    new MobileSidebarManager();
    
    // Log initialization details
    console.log('FinMate Navigation System:');
    console.log('- Mobile navigation:', document.getElementById('mobileSidebar') ? '✓ Loaded' : '✗ Missing');
    console.log('- Desktop navigation:', document.querySelector('.desktop-sidebar') ? '✓ Loaded' : '✗ Missing');
    console.log('- Current breakpoint:', window.innerWidth >= 992 ? 'Desktop' : 'Mobile');
    console.log('- Screen size:', `${window.innerWidth} x ${window.innerHeight}`);
});

// Fallback initialization for various ready states
if (document.readyState === 'interactive' || document.readyState === 'complete') {
    new MobileSidebarManager();
}
</script>