<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <div class="d-flex align-items-center gap-2">
        <button class="btn btn-outline-secondary d-lg-none me-2" id="sidebarToggle" aria-label="Toggle navigation">
            <i class="fas fa-bars"></i>
        </button>
        <h1 class="h2 mb-0"><%= title %></h1>
    </div>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <span class="navbar-text me-3">
                <i class="fas fa-user"></i> Welcome, <%= user.email %>
            </span>
            <a href="/user/notifications" class="btn btn-sm btn-outline-secondary position-relative">
                <i class="fas fa-bell"></i>
                <% if (typeof notificationCount !== 'undefined' && notificationCount > 0) { %>
                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                        <%= notificationCount %>
                    </span>
                <% } %>
            </a>
            <a href="/auth/logout" class="btn btn-sm btn-outline-secondary">
                <i class="fas fa-sign-out-alt"></i> Logout
            </a>
        </div>
    </div>
</div>