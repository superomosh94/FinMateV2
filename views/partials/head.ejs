<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title : 'FinMate - Personal Finance Manager' %></title>
    
    <!-- SEO Meta Tags -->
    <meta name="description" content="<%= typeof description !== 'undefined' ? description : 'FinMate - Manage your personal finances, track expenses, create budgets, and achieve your savings goals.' %>">
    <meta name="keywords" content="<%= typeof keywords !== 'undefined' ? keywords : 'finance, budget, expenses, savings, money management, personal finance' %>">
    <meta name="author" content="FinMate">
    
    <!-- Open Graph Meta Tags -->
    <meta property="og:title" content="<%= typeof title !== 'undefined' ? title : 'FinMate - Personal Finance Manager' %>">
    <meta property="og:description" content="<%= typeof description !== 'undefined' ? description : 'Manage your personal finances with FinMate' %>">
    <meta property="og:type" content="website">
    <meta property="og:url" content="<%= typeof url !== 'undefined' ? url : 'https://finmate-app.com' %>">
    <meta property="og:image" content="/images/og-image.jpg">
    
    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="<%= typeof title !== 'undefined' ? title : 'FinMate - Personal Finance Manager' %>">
    <meta name="twitter:description" content="<%= typeof description !== 'undefined' ? description : 'Manage your personal finances with FinMate' %>">
    <meta name="twitter:image" content="/images/twitter-image.jpg">
    
    <!-- Favicon and App Icons (served from /public) -->
    <link rel="apple-touch-icon" sizes="180x180" href="/images/favicon/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="96x96" href="/images/favicon/favicon-96x96.png">
    <link rel="icon" type="image/x-icon" href="/images/favicon/favicon.ico">
    <link rel="icon" type="image/svg+xml" href="/images/favicon/favicon.svg">
    <link rel="manifest" href="/images/favicon/site.webmanifest">
    <meta name="msapplication-TileColor" content="#da532c">
    <meta name="theme-color" content="#ffffff">
    
    <!-- Canonical URL -->
    <link rel="canonical" href="<%= typeof canonicalUrl !== 'undefined' ? canonicalUrl : 'https://finmate-app.com' %>">
    
    <!-- CSS Stylesheets -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Custom CSS -->
    <link href="/css/main.css" rel="stylesheet">
    
    <!-- Page-specific CSS -->
    <% if (typeof cssFiles !== 'undefined') { %>
        <% cssFiles.forEach(cssFile => { %>
            <link href="<%= cssFile %>" rel="stylesheet">
        <% }); %>
    <% } %>
    
    <!-- Preload Critical Resources -->
    <link rel="preload" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" as="script">
    <link rel="preload" href="/js/main.js" as="script">
    
    <!-- Global Sidebar JS -->
    <script defer src="/js/main.js"></script>

    <!-- Structured Data -->
    <script type="application/ld+json">
    {
        "@context": "https://schema.org",
        "@type": "WebApplication",
        "name": "FinMate",
        "description": "Personal finance management application",
        "url": "https://finmate-app.com",
        "applicationCategory": "FinanceApplication",
        "operatingSystem": "Web Browser",
        "permissions": "browser",
        "offers": {
            "@type": "Offer",
            "price": "0",
            "priceCurrency": "USD"
        }
    }
    </script>
    
    <!-- Additional Meta Tags -->
    <meta name="robots" content="<%= typeof robots !== 'undefined' ? robots : 'index, follow' %>">
    <meta name="language" content="en">
    <meta name="revisit-after" content="7 days">
    
    <!-- Security Headers (would be set in server, but included here for reference) -->
    <meta http-equiv="Content-Security-Policy" content="default-src 'self'; script-src 'self' https://cdn.jsdelivr.net; style-src 'self' https://cdn.jsdelivr.net https://cdnjs.cloudflare.com https://fonts.googleapis.com; font-src 'self' https://cdnjs.cloudflare.com https://fonts.gstatic.com; img-src 'self' data: https:;">
</head>